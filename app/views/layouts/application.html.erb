<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <nav class="nav navbar-left">
            <a href="https://ff44a65c42ab42888d21016310c5c45e.vfs.cloud9.us-east-1.amazonaws.com">Bookers</a>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
                <%= link_to user_path(current_user), class:"btn btn-link" do %>
                <i class="fas fa-home"></i>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to users_path, class:"btn btn-link" do %>
                <i class="fas fa-users"></i>
                <span class="glyphicon glyphicon-user" aria-hidden="true"> Users</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to books_path, class:"btn btn-link" do %>
                <i class="fas fa-book-open"></i>
                <span class="glyphicon glyphicon-book" aria-hidden="true"> Books</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                <i class="fas fa-sign-out-alt"></i>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"> Logout</span>
                <% end %>
              </li>
            <% else %>
              <li class="">
                <%= link_to root_path, class:"btn btn-link" do %>
                <i class="fas fa-home"></i>
                <span class="glyphicon glyphicon-home" aria-hidden="true"> Home</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to home_about_path, class:"btn btn-link" do %>
                <i class="fas fa-link"></i>
                <span class="glyphicon glyphicon-link" aria-hidden="true"> About</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                <i class="fas fa-user-plus"></i>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"> sign up</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_session_path, class:"btn btn-link" do %>
                <i class="fas fa-sign-in-alt"></i>
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"> login</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </nav>
      </div>
    </header>
    <div class="body">
      <p class="notice"><%= notice %></p>
      <%= yield %>
    </div>


        <footer>
          <div class="col-xs-3 col-xs-offset-9"> CopyRight Infratop.inc </div>
        </footer>
  </body>
</html>