<div class="container">
  <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_for(@user) do |f| %>
        <%= render 'books/error', model: @user %>
        <label for="user_name">Name</label>
        <%= f.text_field :name %>
        <div class="user-edit-image">Image</div>
        <%= f.attachment_field :profile_image %>
        <div class="form-body">Introduction</div>
        <%= f.text_area :introduction %><br>
        <div class="upload">
        <%= f.submit " Update User", class:"btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>