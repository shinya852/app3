<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @newbook %>
     </div>
     <div class="col-md-8 offset-md-1">
       <h1>Book detail</h1>
       <table class="table table-user-show">
         <tr>
           <tb><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></tb>
           <tb><%= link_to @user.name, user_path(@user) %></tb>
           <tb><%= @book.title %></tb>
           <tb><%= @book.body %></tb>
           <% if @book.user_id == current_user.id %>
             <tb><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></tb>
             <tb><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></tb>
            <% end %>
         </tr>
        </table>
     </div>
    </div>
</div>